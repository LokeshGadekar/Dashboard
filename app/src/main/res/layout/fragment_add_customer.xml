<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/ttbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/ttbar"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Enter Name"
        style="@style/HintFontPath"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/Ed_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/EditTextFontPath"
        android:inputType="text"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter Email"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="textEmailAddress"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter Phone"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter Address"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="text"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter City"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="text"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter State"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Enter Postal Code"
            style="@style/HintFontPath"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/Ed_Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/EditTextFontPath"
            android:inputType="text"
            />


        <Button
            android:id="@+id/AddButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Add Customer"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/adbutton"
            android:textColor="@color/white"
            />

    </LinearLayout>
    </ScrollView>


</RelativeLayout>