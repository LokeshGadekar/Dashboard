<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/app_theme</item>
        <item name="colorAccent">@color/app_theme</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.PopUpMenu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintFontPath" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EditTextFontPath" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">15dp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="FontTxtView" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="AddButton">
        <item name="fab_colorPressed">@color/app_theme</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" >
    </style>
    <style name="Materiall" parent="Theme.MaterialComponents.Light"/>

   <style name="AppTheme.PopUpMenu" parent="Theme.AppCompat.Light">
       <item name="android:paddingRight">5dp</item>
    <item name="android:src">@drawable/ic_menu2_24dp</item>
   </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

</resources>
